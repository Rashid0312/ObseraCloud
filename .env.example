# SkyView Production Environment Variables
# Copy this file to .env and update with your own secure values
# NEVER commit .env to version control!

# ===========================================
# DATABASE
# ===========================================
POSTGRES_DB=skyview
POSTGRES_USER=skyview_user
POSTGRES_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD_HERE

# ===========================================
# JWT AUTHENTICATION  
# ===========================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32

# ===========================================
# APPLICATION
# ===========================================
FLASK_ENV=production
NODE_ENV=production

# ===========================================
# DOMAIN (for HTTPS/SSL)
# ===========================================
DOMAIN=localhost
SSL_EMAIL=admin@example.com

# ===========================================
# INTERNAL SERVICE URLS (don't change unless custom setup)
# ===========================================
PROMETHEUS_URL=http://prometheus:9090
LOKI_URL=http://loki:3100
TEMPO_URL=http://tempo:3200
